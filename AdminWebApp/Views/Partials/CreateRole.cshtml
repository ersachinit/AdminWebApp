@model AdminWebApp.Models.CreateRoleModel
@{
    ViewBag.Title = "CreateRole";

}
@using (Html.BeginForm("CreateRoles", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="col-sm-12">
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-4">
                @Html.LabelFor(m => m.RoleName)
                @Html.TextBoxFor(m => m.RoleName, new { @class = "form-control" })
            </div>           
        </div>
        <div class="row">
            <div class="col-md-4">
                <input type="submit" class="btn btn-primary" value="Submit" />
            </div>
        </div>
    </div>
}



